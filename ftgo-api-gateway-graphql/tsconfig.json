{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "noImplicitAny": false,
    "lib": ["esnext.asynciterable", "es2015"],
    "baseUrl" : "./src",
    "paths": {
      "*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
